<?xml version="1.0" encoding="UTF-16"?>
<Task version="1.2" xmlns="http://schemas.microsoft.com/windows/2004/02/mit/task">
  <RegistrationInfo>
    <Date>2025-07-31T00:00:00</Date>
    <Author>THE-RED MACHINE</Author>
    <Description>THE-RED MACHINE Trading System - Runs only during Indian market hours (9:15 AM - 3:30 PM IST, Mon-Fri)</Description>
    <URI>\THE-RED-MACHINE\MarketHoursTrading</URI>
  </RegistrationInfo>
  <Triggers>
    <!-- Monday-Friday at 9:15 AM IST -->
    <CalendarTrigger>
      <StartBoundary>2025-07-31T09:15:00</StartBoundary>
      <Enabled>true</Enabled>
      <ScheduleByWeek>
        <DaysOfWeek>
          <Monday />
          <Tuesday />
          <Wednesday />
          <Thursday />
          <Friday />
        </DaysOfWeek>
        <WeeksInterval>1</WeeksInterval>
      </ScheduleByWeek>
    </CalendarTrigger>
  </Triggers>
  <Principals>
    <Principal id="Author">
      <LogonType>InteractiveToken</LogonType>
      <UserId>DESKTOP-USER</UserId>
    </Principal>
  </Principals>
  <Settings>
    <MultipleInstancesPolicy>IgnoreNew</MultipleInstancesPolicy>
    <DisallowStartIfOnBatteries>false</DisallowStartIfOnBatteries>
    <StopIfGoingOnBatteries>false</StopIfGoingOnBatteries>
    <AllowHardTerminate>true</AllowHardTerminate>
    <StartWhenAvailable>false</StartWhenAvailable>
    <RunOnlyIfNetworkAvailable>false</RunOnlyIfNetworkAvailable>
    <IdleSettings>
      <StopOnIdleEnd>true</StopOnIdleEnd>
      <RestartOnIdle>false</RestartOnIdle>
    </IdleSettings>
    <AllowStartOnDemand>true</AllowStartOnDemand>
    <Enabled>true</Enabled>
    <Hidden>false</Hidden>
    <RunOnlyIfIdle>false</RunOnlyIfIdle>
    <WakeToRun>false</WakeToRun>
    <ExecutionTimeLimit>PT6H15M</ExecutionTimeLimit>
    <Priority>7</Priority>
  </Settings>
  <Actions Context="Author">
    <Exec>
      <Command>cmd</Command>
      <Arguments>/c "cd /d &quot;C:\Users\tushar\Desktop\THE-RED MACHINE&quot; &amp;&amp; python minimal_trading_system.py"</Arguments>
      <WorkingDirectory>C:\Users\tushar\Desktop\THE-RED MACHINE</WorkingDirectory>
    </Exec>
  </Actions>
</Task>