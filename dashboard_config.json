{
  "dashboard": {
    "title": "Real-Time Trading Dashboard",
    "refresh_interval": 5,
    "auto_refresh": true,
    "paper_trading": {
      "starting_balance": 100000,
      "max_position_size": 10000,
      "stop_loss_pct": 2,
      "take_profit_pct": 5
    },
    "live_trading": {
      "enabled": false,
      "risk_management": {
        "max_daily_loss": 2000,
        "max_position_size": 0.1,
        "stop_loss_pct": 2,
        "take_profit_pct": 5
      }
    },
    "display": {
      "theme": "dark",
      "show_charts": true,
      "show_trades": true,
      "show_signals": true,
      "show_logs": false
    }
  },
  "api": {
    "kite_connect": {
      "enabled": true,
      "sandbox_mode": true,
      "rate_limit": 10
    }
  },
  "logging": {
    "level": "INFO",
    "file": "dashboard.log",
    "max_size": "10MB",
    "backup_count": 5
  }
}